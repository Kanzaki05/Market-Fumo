@model Market.Models.tbl_producto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: #363062;
        }

        .container {
            padding: 40px;
            border-radius: 20px;
            border: 4px solid #363062;
            background-color: #435585;
            width: 100%;
            margin: auto;
        }

            .container .form {
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
                gap: 25px;
            }

            

            .container .form h2 {
                color: #fff;
                font-weight: 500;
                letter-spacing: 0.1em;
            }

            

            .container .form .form-group {
                width:100%;
                margin-bottom: 10px;
                max-height: 200px;
            }

            .container .form .input-group-addon {
                min-width: 40px;
            }
            .container .form .form-group input[type="DropDownList"],
            .container .form .form-group input[type="text"],
            .container .form .form-group input[type="email"],
            .container .form .form-group input[type="password"],
            .container .form input[type="file"],
            .container .form .form-group textarea {
                width: 100%; /* Ocupa el 100% del ancho del contenedor .form-group */
                padding: 10px; /* Ajusta el relleno según tus preferencias */
                border-radius: 5px; /* Opcional: para bordes redondeados */
                border: 1px solid #ccc; /* Opcional: para un borde */
                box-sizing: border-box;/* Asegura que el ancho incluya el relleno y el borde */
            }
            
    </style>
</head>
<body>

    <div id="main-div">
        <div id="box" class="img-responsive">
            @using (Html.BeginForm("CreatePublic",
                            "Usuario",
                            FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
            {
                <div class="container">
                    <div class="form signin">
                        <h2>Crear Publicación</h2>

                        <div class="form-group">
                            <div class="input-group" style="width: 100%;">
                                <div class="input-group-addon" style="min-width: 0px;"><span class="glyphicon glyphicon-user"></span></div>
                                @Html.DropDownListFor(x => x.pro_fk_cat, ViewBag.categorylist as SelectList, "--Selecciona Categoría--", new { @class = "form-control", required = "required" })
                            </div>
                            <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_fk_cat) </span>

                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                @Html.TextBoxFor(x => x.pro_nombre, new { @class = "form-control", @placeholder = "Nombre del Producto", required = "required" })

                            </div>
                            <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_nombre) </span>

                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                @Html.TextBoxFor(x => x.pro_precio, new { @class = "form-control", @placeholder = "Precio S/.", required = "required" })

                            </div>
                            <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_precio) </span>

                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                <textarea id="pro_descrip" name="pro_descrip" class="form-control" placeholder="Descripción" style="height: 200px;" required="required"></textarea>
                            </div>
                            <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_descrip) </span>
                        </div>


                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>

                                <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />

                            </div>


                        </div>



                        <div class="form-group" style="text-align:center">

                            <input type="submit" value="Añadir Producto" class="btn btn-success btn-block" />

                        </div>

                        <div class="form-group">
                            <p style="color:red">@ViewBag.error</p>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
